


<% if permit?('editor_structure') %>
<ul class='page_detail_buttons'>
  <li class='icon'><a href='javascript:void(0);'  title='<%= vh 'Delete Data Module'.t%>' onclick='StructureEditor.nodeDelete(<%= @node.id %>,"<%= jh "Are you sure you want to remove this Data module?" .t %>");'><%= image_tag(theme_src('icons/header_actions/delete_page.png')) %></a></li>
</ul>  
<% end -%>


<h1 class='inpage'> <%= "Data Feed Options:".t %> <a href='<%= h @node.node_path %>'><%= @node.node_path %></a></h1>

<div class='tree_detail_body'>

  <% if flash[:notice] %>
    <div class='inpage_flash_notice'>
      Updated Options
    </div>
  <% end -%>

<% remote_cms_form_for :options, @options, :update => 'element_info',:html => {:id => 'feed_form', :class => 'admin_form' }, :url => { :action => 'data_output', :path => @node.id } do |f| -%>
  <%= f.select :data_publication_id, @data_publications, :label => 'Feed Publication' %>
  <% if @site_features %>
    <%= f.select :site_feature_id, @site_features, :label => 'Feed Feature' %>
  <% end -%>
  <%= f.submit_tag 'Update Options' %>
<% end -%>


</div>
